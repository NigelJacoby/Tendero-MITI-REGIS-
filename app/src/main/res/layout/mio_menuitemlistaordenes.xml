<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:layout_margin="@dimen/activity_margin"
        android:padding="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mio_varstrmisordenesprincipal3"
                android:textColor="@color/blackPrimary"
                android:gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/txt_IdOrden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="00000000"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_Nombres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mio_varstrmisordenesprincipal4"
            android:textColor="@color/blackPrimary"
            android:gravity="left"
            android:paddingTop="20dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mio_varstrmisordenesprincipal5"
                android:textColor="@color/blackPrimary"
                android:paddingTop="10dp"/>

            <TextView
                android:id="@+id/txt_OrdCreada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="00/00/0000"
                android:layout_marginLeft="10dp"
                android:textColor="@color/blackPrimary"
                android:paddingTop="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mio_varstrmisordenesprincipal6"
                android:textColor="@color/blackPrimary"
                android:paddingTop="10dp"/>

            <TextView
                android:id="@+id/txt_OrdEntregada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="00/00/0000"
                android:layout_marginLeft="10dp"
                android:textColor="@color/blackPrimary"
                android:paddingTop="10dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mio_moptxtdetalle"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/mio_varstrmisordenesprincipal7"
                android:layout_marginLeft="50dp"
                android:textColor="@color/green_800"/>
            <TextView
                android:id="@+id/mio_moptxtchat"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:text="@string/mio_varstrmisordenesprincipal8"
                android:textColor="@color/green_800"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>