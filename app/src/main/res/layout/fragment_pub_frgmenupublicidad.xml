<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".tendero.Inicio_sesion.ui.Mi_publicidad.pub_frgmenupublicidad">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pub_mpimgvwpubdef"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/grey_400"
            android:src="@drawable/pub_imganuncio"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pub_varstrmenupublicidad1"
            android:background="@color/grey_800"
            style="@style/txtstyle_white"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/grey_200">

            <Button
                android:id="@+id/pub_mpbtncrearanuncio"
                style="@style/txtstyle_content"
                android:layout_width="@dimen/btn_type04_width"
                android:layout_height="wrap_content"
                android:text="@string/pub_varstrmenupublicidad2"
                android:background="@drawable/outlinedbutton_orange"
                android:drawableLeft="@drawable/pub_iconplusfill"
                android:drawablePadding="10dp"
                android:textAllCaps="false"
                android:layout_marginBottom="30dp"/>

            <Button
                android:id="@+id/pub_mpbtnmisanuncios"
                android:layout_width="@dimen/btn_type04_width"
                android:layout_height="wrap_content"
                android:text="@string/pub_varstrmenupublicidad3"
                android:background="@drawable/outlinedbutton_grey"
                android:textAllCaps="false"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>